<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_list_item"
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:layout_marginLeft="@dimen/child_item_left_margin"
    android:layout_marginRight="@dimen/child_item_right_margin"
    android:layout_marginTop="40dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_in_shopList_title"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/tv_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_in_shopList_title"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/child_item_left_margin"
            android:layout_marginRight="@dimen/child_item_right_margin"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tv_list_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_list_name"
            android:layout_alignStart="@+id/tv_list_name"
            android:layout_below="@+id/tv_list_name"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>

</android.support.v7.widget.CardView>