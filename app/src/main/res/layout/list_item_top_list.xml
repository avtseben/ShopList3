<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/child_item_left_margin"
    android:layout_marginRight="@dimen/child_item_right_margin"
    android:layout_width="@dimen/child_item_width"
    android:layout_height="@dimen/child_item_height"
    app:cardCornerRadius="4dp"
    android:id="@+id/top_list_item">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/child_item_left_margin"
            android:layout_marginRight="@dimen/child_item_right_margin"
            android:id="@+id/tv_list_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_list_date"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/tv_list_name"
            android:layout_alignLeft="@+id/tv_list_name"
            android:layout_alignStart="@+id/tv_list_name" />
    </RelativeLayout>

</android.support.v7.widget.CardView>